<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/>  
                </div>
                <div class="col-md-8">
                    <h1 style="text-align: center; padding-top:20px;" class="fairyDust">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados">
                <div class="col-md-12">
                    <nav class="prim-tabs tabs" data-group="primary">
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="basico" title="Basico">Básico</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="descricao" title="Descricao">Descricao</a></label>
                    </nav>
                </div>                
            </div>
        </div>   
    </header>
    <section class="sheet-primary form_tagmar">
        <div class="container">
        <div class="row container_dados">
        <div class="tab basico container" data-group="primary" data-tab="basico">
                <div class="row dados">
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Alcance:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="system.alcance" type="text" value="{{data.system.alcance}}" height="30"/>
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Munição:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="system.municao" type="number" value="{{data.system.municao}}" height="30"/>
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Nível:</h4></label>
                    </div>
                    <div class="col-md-2">
                        {{#ifeq data.system.tipo ""}}
                        <input name="system.nivel" type="number" value="{{data.system.nivel}}" height="30"/>
                        {{/ifeq}}
                        {{#ifdf data.system.tipo ""}}
                        <input name="system.nivel" type="number" value="{{data.system.nivel}}" height="30" readonly/>
                        {{/ifdf}}
                    </div>
                </div>

                <div class="row dados">
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Bônus:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <select class="mediaeval" name="system.bonus" type="text" value="{{data.system.bonus}}" data-dtype="String" height="30" style="font-size: 110%;">
                            {{#selectOptions item.comb_bonus selected=data.system.bonus valueAttr="key"}}
                            {{/selectOptions}}
                        </select>         
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Tipo:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <select class="mediaeval" name="system.tipo" type="text" data-dtype="String" value="{{data.system.tipo}}" height="30">
                        {{#selectOptions item.comb_tipos selected=data.system.tipo valueAttr="key"}}
                        {{/selectOptions}}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">B.Dano:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <select class="mediaeval" name="system.bonus_dano" type="text" value="{{data.system.bonus_dano}}" data-dtype="String" height="30" style="font-size: 110%;">
                            {{#selectOptions item.comb_bonus selected=data.system.bonus_dano valueAttr="key"}}
                            {{/selectOptions}}
                        </select>       
                    </div>
                </div>
                <div class="row dados">
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Coluna+:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input  name="system.bonus_magico" type="number" value="{{data.system.bonus_magico}}" height="30"/>
                    </div>                        
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Dano+:</h4></label>
                    </div>
                    <div class="col-md-2 d_dano">
                        <input type='number' name='system.peso' value="{{data.system.peso}}" height="30"/>
                    </div>
                </div>
                <div class="row dados">
                    <div class="col-md-2"></div>
                    <div class="col-md-1">
                        <label><h4 class="mediaeval">L:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input class="mediaeval" name="system.def_l" type="number" value="{{data.system.def_l}}" height="30"/>
                    </div>
                    <div class="col-md-1">
                        <label><h4 class="mediaeval">M:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input class="mediaeval" name="system.def_m" type="number" value="{{data.system.def_m}}" height="30"/>
                    </div>
                    <div class="col-md-1">
                        <label><h4 class="mediaeval">P:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input class="mediaeval" name="system.def_p" type="number" value="{{data.system.def_p}}" height="30"/>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row dados">
                    <div class="col-md-1">
                        <label><h4 class="mediaeval">Dano:</h4></label>
                    </div>

                    <div class="col-md-11">
                        <table>
                            <tr>
                                <th class="mediaeval">25%</th>
                                <th class="mediaeval">50%</th>
                                <th class="mediaeval">75%</th>
                                <th class="mediaeval">100%</th>
                                <th class="mediaeval">125%</th>
                                <th class="mediaeval">150%</th>
                                <th class="mediaeval">175%</th>
                                <th class="mediaeval">200%</th>
                                <th class="mediaeval">225%</th>
                                <th class="mediaeval">250%</th>
                                <th class="mediaeval">275%</th>
                                <th class="mediaeval">300%</th>
                            </tr>
                            <tr>
                                <td><input class="dano25" name="system.dano_base.d25" type="number" value="{{data.system.dano_base.d25}}"></td>
                                <td><input class="dano50" name="system.dano_base.d50" type="number" value="{{data.system.dano_base.d50}}"></td>
                                <td><input class="dano75" name="system.dano_base.d75" type="number" value="{{data.system.dano_base.d75}}"></td>
                                <td><input class="dano100" name="system.dano_base.d100" type="number" value="{{data.system.dano_base.d100}}"></td>
                                <td><input class="dano125" name="system.dano_base.d125" type="number" value="{{data.system.dano_base.d125}}"></td>
                                <td><input class="dano150" name="system.dano_base.d150" type="number" value="{{data.system.dano_base.d150}}"></td>
                                <td><input class="dano175" name="system.dano_base.d175" type="number" value="{{data.system.dano_base.d175}}"></td>
                                <td><input class="dano200" name="system.dano_base.d200" type="number" value="{{data.system.dano_base.d200}}"></td>
                                <td><input class="dano225" name="system.dano_base.d225" type="number" value="{{data.system.dano_base.d225}}"></td>
                                <td><input class="dano250" name="system.dano_base.d250" type="number" value="{{data.system.dano_base.d250}}"></td>
                                <td><input class="dano275" name="system.dano_base.d275" type="number" value="{{data.system.dano_base.d275}}"></td>
                                <td><input class="dano300" name="system.dano_base.d300" type="number" value="{{data.system.dano_base.d300}}"></td>
                            </tr>
                            <tr>
                                <td><input  name="system.dano.d25" type="number" value="{{data.system.dano.d25}}" readonly></td>
                                <td><input  name="system.dano.d50" type="number" value="{{data.system.dano.d50}}" readonly></td>
                                <td><input  name="system.dano.d75" type="number" value="{{data.system.dano.d75}}" readonly></td>
                                <td><input  name="system.dano.d100" type="number" value="{{data.system.dano.d100}}" readonly></td>
                                <td><input  name="system.dano.d125" type="number" value="{{data.system.dano.d125}}" readonly></td>
                                <td><input  name="system.dano.d150" type="number" value="{{data.system.dano.d150}}" readonly></td>
                                <td><input  name="system.dano.d175" type="number" value="{{data.system.dano.d175}}" readonly></td>
                                <td><input  name="system.dano.d200" type="number" value="{{data.system.dano.d200}}" readonly></td>
                                <td><input  name="system.dano.d225" type="number" value="{{data.system.dano.d225}}" readonly></td>
                                <td><input  name="system.dano.d250" type="number" value="{{data.system.dano.d250}}" readonly></td>
                                <td><input  name="system.dano.d275" type="number" value="{{data.system.dano.d275}}" readonly></td>
                                <td><input  name="system.dano.d300" type="number" value="{{data.system.dano.d300}}" readonly></td>
                            </tr>
                        </table>
                    </div>
                </div>
                
                <div class="row dados">
                    <div class="col-md-2">
                        <h4 class="mediaeval">Penalidade:</h4>
                    </div>
                    <div class="col-md-10">
                        <table>
                            <tr>
                                <th style="text-align: left;" class="mediaeval">25%</th>
                                <th style="text-align: left;" class="mediaeval">50%</th>
                                <th style="text-align: left;" class="mediaeval">75%</th>
                                <th style="text-align: left;" class="mediaeval">100%</th>
                            </tr>
                            <tr>
                                <td>
                                    {{#if data.system.penalidade.p25}}
                                        <input class="armPen25" type="checkbox" name="system.penalidade.p25" value="{{data.system.penalidade.p25}}" checked data-dtype="Boolean" id="penalidade.p25" style="text-align: right;">
                                    {{else}}
                                        <input class="armPen25" type="checkbox" name="system.penalidade.p25" value="{{data.system.penalidade.p25}}" data-dtype="Boolean" id="penalidade.p25" style="text-align: right;">
                                    {{/if}}
                                </td>
                                <td>
                                    {{#if data.system.penalidade.p50}}
                                        <input class="armPen50" type="checkbox" name="system.penalidade.p50" value="{{data.system.penalidade.p50}}" checked data-dtype="Boolean" id="penalidade.p50" style="text-align: right;">
                                    {{else}}
                                        <input class="armPen50" type="checkbox" name="system.penalidade.p50" value="{{data.system.penalidade.p50}}" data-dtype="Boolean" id="penalidade.p50" style="text-align: right;">
                                    {{/if}}
                                </td>
                                <td>
                                    {{#if data.system.penalidade.p75}}
                                        <input class="armPen75" type="checkbox" name="system.penalidade.p75" value="{{data.system.penalidade.p75}}" checked data-dtype="Boolean" id="penalidade.p75" style="text-align: right;">
                                    {{else}}
                                        <input class="armPen75" type="checkbox" name="system.penalidade.p75" value="{{data.system.penalidade.p75}}" data-dtype="Boolean" id="penalidade.p75" style="text-align: right;">
                                    {{/if}}
                                </td>
                                <td>
                                    {{#if data.system.penalidade.p100}}
                                        <input class="armPen100" type="checkbox" name="system.penalidade.p100" value="{{data.system.penalidade.p100}}" checked data-dtype="Boolean" id="penalidade.p100" style="text-align: right;">
                                    {{else}}
                                        <input class="armPen100" type="checkbox" name="system.penalidade.p100" value="{{data.system.penalidade.p100}}" data-dtype="Boolean" id="penalidade.p100" style="text-align: right;">
                                    {{/if}}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row dados">
                    <div class="col-2"><h4 class="mediaeval">Favorito:</h4></div>
                    <div class="col-2">
                        {{#if data.system.favorito}}
                            <input type="checkbox" checked name="system.favorito" data-dtype="Boolean" value="{{data.system.favorito}}"/>
                        {{else}}
                            <input type="checkbox" name="system.favorito" data-dtype="Boolean" value="{{data.system.favorito}}"/>
                        {{/if}}
                    </div>
                </div>

            </div>
            <div class="tab descricao container" data-group="primary" data-tab="descricao">
                <div class="row dados">
                    <div class="col-md-12" style="height: 310px;">
                        {{editor data.system.descricao target="system.descricao" button=true owner=options.owner editable=options.editable}}
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
</form>

<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/> 
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados">
                <div class="col-md-12">
                    <nav class="prim-tabs tabs" data-group="primary">
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="basico" title="Basico">Básico</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="descricao" title="Descricao">Descricao</a></label>
                    </nav>
                </div>                
            </div>
        </div>   
    </header>
    <section class="sheet-primary form_tagmar">
        <div class="container">
            <div class="row container_dados">
                <div class="tab basico container" data-group="primary" data-tab="basico">
                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Tipo:</h4></label>
                        </div>
                        <div class="col-md-4">
                            <select class="mediaeval" name="system.tipo" type="text" value="{{data.system.tipo}}" data-dtype="String" height="30">
                                {{#selectOptions item.hab_tipos selected=data.system.tipo valueAttr="key" labelAttr="label"}}
                                {{/selectOptions}}
                            </select>      
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Custo:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="system.custo" type="number" value="{{data.system.custo}}" height="30"/>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Ajuste:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <select class="mediaeval" name="system.ajuste.atributo" type="text" list="atributos" value="{{data.system.ajuste.atributo}}" height="30" data-dtype="String">
                                {{#selectOptions item.prof_atribM selected=data.system.ajuste.atributo valueAttr="key"}}
                                {{/selectOptions}}
                            </select>
                        </div>
                        <div class="col-md-1">
                            
                        </div>
                        <div class="col-md-2">
                            <label title="Proibido rolamento sem nível." style="vertical-align: center;"><i class="fa-solid fa-ban"></i></label>
                            <input type="checkbox" name="system.nao_rolar_sem_nivel" data-dtype="Boolean" value="{{data.system.nao_rolar_sem_nivel}}" {{checked data.system.nao_rolar_sem_nivel}} title="Proibido rolamento sem nível."/>
                        </div>
                        <div class="col-md-1">
                            <input class="ajuste hiddenT" name="system.ajuste.valor" type="number" value="{{data.system.ajuste.valor}}" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Nível:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="nivel" name="system.nivel" type="number" value="{{data.system.nivel}}" height="30"/>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Penalidade:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="penal" name="system.penalidade" type="number" value="{{data.system.penalidade}}" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Bônus:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="bonus" name="system.bonus" type="number" value="{{data.system.bonus}}" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Total:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="totalInput2" name="system.total" type="number" value="{{data.system.total}}" height="30" readonly/>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h3 class="mediaeval">Tarefas Aperfeiçoadas:</h3>
                    </div>

                    <div class="row dados">
                        <div class="col-md-12" style="height: 235px;">
                            {{editor data.system.tarefAperf target="system.tarefAperf" button=true owner=options.owner editable=options.editable}}
                        </div>
                    </div>

                </div>
                <div class="tab descricao container" data-group="primary" data-tab="descricao">
                    <div class="row dados">
                        <div class="col-md-12" style="height: 350px;">
                            {{editor data.system.descricao target="system.descricao" button=true owner=options.owner editable=options.editable}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

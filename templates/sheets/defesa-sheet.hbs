<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/> 
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados">
                <div class="container">
                    <div class="row dados">
                        <div class="col-md-3">
                            <label><h4 class="mediaeval">Defesa Base:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <select class="mediaeval" name="system.defesa_base.tipo" type="text" value="{{data.system.defesa_base.tipo}}" data-dtype="String" height="30" style="font-size: 110%;">
                                {{#selectOptions item.def_tipos selected=data.system.defesa_base.tipo valueAttr="key"}}
                                {{/selectOptions}}
                            </select>    
                        </div>
                        <div class="col-md-2">
                            <input name="system.defesa_base.valor" type="number" value="{{data.system.defesa_base.valor}}" height="30"/>
                        </div>
                        <div class="col-md-3">
                            <label><h4 class="mediaeval">Físico Mín:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="system.fis_min" type="number" value="{{data.system.fis_min}}" height="30"/>
                        </div>
                        
                    </div>

                    <div class="row dados">
                        <div class="col-md-3">
                            {{#ifeq data.system.peso 0}}
                                <a class="abs_magica"><i class="far fa-circle"></i></a><label class="mediaeval"> Abs. Mágica</label>
                            {{/ifeq}}
                            {{#ifdf data.system.peso 0}}
                                <a class="abs_magica"><i class="far fa-check-circle"></i></a><label class="mediaeval"> Abs. Mágica</label>
                            {{/ifdf}}
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Absorção:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="system.absorcao" type="number" value="{{data.system.absorcao}}" height="30"/>
                        </div>
                        <div class="col-md-3">
                            <label><h4 class="mediaeval">Força Mín:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="system.for_min" type="number" value="{{data.system.for_min}}" height="30"/>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-12" style="height: 320px;">
                            {{editor data.system.descricao target="system.descricao" button=true owner=options.owner editable=options.editable}}
                        </div>
                    </div>

            </div>
            </div>
        </div>   
    </header>
</form>

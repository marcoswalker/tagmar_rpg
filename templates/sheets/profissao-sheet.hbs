<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/> 
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">Profissão</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados">
                <div class="col-md-12">
                    <nav class="prim-tabs tabs" data-group="primary">
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="basico" title="Basico">Básico</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="descricao" title="Descricao">Descricao</a></label>
                    </nav>
                </div>                
            </div>
        </div>   
    </header>
    <section class="sheet-primary form_tagmar">
        <div class="container">
            <div class="row container_dados">
                <div class="tab basico container" data-group="primary" data-tab="basico">
                    <div class="row dados">
                        <div class="col-md-6">
                            <table>
                                <caption class="mediaeval">Tabela cálculo EH:</caption>
                                <tr style="text-align: left;">
                                    <th class="mediaeval">1-2</th>
                                    <th class="mediaeval">3-4-5</th>
                                    <th class="mediaeval">6-7-8</th>
                                    <th class="mediaeval">9-10</th>
                                </tr>
                                <tr>
                                    <td>
                                        <input name="system.lista_eh.v1" type="number" value="{{data.system.lista_eh.v1}}" height="30"/>
                                    </td>
                                    <td>
                                        <input name="system.lista_eh.v2" type="number" value="{{data.system.lista_eh.v2}}" height="30"/>
                                    </td>
                                    <td>
                                        <input name="system.lista_eh.v3" type="number" value="{{data.system.lista_eh.v3}}" height="30"/>
                                    </td>
                                    <td>
                                        <input name="system.lista_eh.v4" type="number" value="{{data.system.lista_eh.v4}}" height="30"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table>
                                <caption class="mediaeval">Pontos para aquisição</caption>
                                <tr style="text-align: left;">
                                    <th class="mediaeval">Habilidades</th>
                                    <th class="mediaeval">Técnicas</th>
                                    <th class="mediaeval">G.Armas</th>
                                    <th class="mediaeval">G.Armas Aprim.</th>
                                </tr>
                                <tr>
                                    <td>
                                        <input name="system.p_aquisicao.p_hab" type="number" value="{{data.system.p_aquisicao.p_hab}}"/>
                                    </td>
                                    <td>
                                        <input name="system.p_aquisicao.p_tec" type="number" value="{{data.system.p_aquisicao.p_tec}}"/>
                                    </td>
                                    <td>
                                        <input name="system.p_aquisicao.p_gra" type="number" value="{{data.system.p_aquisicao.p_gra}}"/>
                                    </td>
                                    <td>
                                        <input name="system.grupo_aprim" type="checkbox" {{checked data.system.grupo_aprim}}  title="Grupo de Armas Aprimorado"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-4">
                            <label><h4 class="mediaeval">Atrib.Pontos Magía:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <select class="mediaeval" name="system.atrib_mag" type="text" value="{{data.system.atrib_mag}}" data-dtype="String" height="30">
                                {{#selectOptions item.prof_atribM selected=data.system.atrib_mag valueAttr="key"}}
                                {{/selectOptions}}
                            </select> 
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Grupo Penalizado:</h4></label>
                        </div>
                        <div class="col-md-4">
                            <select class="mediaeval" name="system.grupo_pen" type="text" value="{{data.system.grupo_pen}}" data-dtype="String" height="30">
                                {{#selectOptions item.prof_grupo_pen selected=data.system.grupo_pen valueAttr="key" labelAttr="label"}}
                                {{/selectOptions}}
                            </select>      
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Habilidade Nata:</h4></label>
                        </div>
                        <div class="col-md-4">
                            <input name="system.hab_nata" type="text" value="{{data.system.hab_nata}}" height="30"/>
                        </div>
                        <div class="col-md-4" style="text-align: right;">
                            <label><h4 class="mediaeval">Energia Heróica:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="system.eh_base" type="number" value="{{data.system.eh_base}}" height="30"/>
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-3"><label><h4 class="mediaeval">Especialização:</h4></label></div>
                        <div class="col-md-7">
                            <input type="text" class="iEspecName" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <h4 class="mediaeval"><a class="bAddEspec"><i class="fas fa-plus-circle"></i></a></h4>
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-12">
                            <table>
                                <caption class="mediaeval">Especializações</caption>
                                <tr style="text-align: left;">
                                    <th class="mediaeval">Especialização</th>
                                    <th>Apagar</th>
                                </tr>
                                {{#each data.system.especializacoes as |espec_name key|}}
                                    {{#ifdf espec_name ""}}
                                        <tr>
                                            <td class="mediaeval">{{espec_name}}</td>
                                            <td><a class="bApagaEspec" data-item-id="{{espec_name}}"><i class="fas fa-minus-circle"></i></a></td>
                                        </tr>
                                    {{/ifdf}}
                                {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab descricao container" data-group="primary" data-tab="descricao">
                    <div class="row dados">
                        <div class="col-md-12" style="height: 345px;">
                            {{editor data.system.descricao target="system.descricao" button=true owner=options.owner editable=options.editable}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/> 
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <div class="col-sd-2" style="padding-top: 3px;padding-left:3px;">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                </div>
                <div class="col-md-8">
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
                </div>
                <div class="col-md-2" style="padding-top: 13px;">
                    <h1><a class="sendMessage" title="Enviar Item para o Chat(Apenas Mestres)."><i class="far fa-comment-alt"></i></a></h1>
                </div>
            </div>
            <div class="row container_dados">
                <div class="container">
                    <div class="row dados">
                        <div class="col-md-4">
                            <label><h4 class="mediaeval">Atributo:</h4></label>
                        </div>
                        <div class="col-md-8">
                            <select class="mediaeval" style="font-size: 90%;" name="system.atributo" type="text" value="{{data.system.atributo}}" data-dtype="String" height="30">
                                {{#selectOptions item.efeitos_tipos selected=data.system.atributo valueAttr="key"}}
                                {{/selectOptions}}
                            </select>     
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-4">
                            <label><h4 class="mediaeval">Tipo:</h4></label>
                        </div>
                        <div class="col-md-8">
                            <select class="mediaeval" style="font-size: 100%;" name="system.tipo" type="text" value="{{data.system.tipo}}" data-dtype="String" height="30">
                                {{#selectOptions item.efeitos_oper selected=data.system.tipo valueAttr="key"}}
                                {{/selectOptions}}
                            </select>     
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-4">
                            <label><h4 class="mediaeval">Valor:</h4></label>
                        </div>
                        <div class="col-md-8">
                            <input name="system.valor" type="number" value="{{data.system.valor}}" height="30"/>
                        </div>
                    </div>
                    <div class="row dados">
                        <div class="col-md-4">
                            <label><h4 class="mediaeval">Ativo:</h4></label>
                        </div>
                        <div class="col-md-8">
                            {{#if data.system.ativo}}
                            <input type='checkbox' name='system.ativo' checked/>
                            {{else}}
                            <input type="checkbox" name="system.ativo"/>
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>
        </div>   
    </header>
</form>

<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/>  
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">Técnica de Combate</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados abas esconde">
                <div class="col-md-12">
                    <nav class="prim-tabs tabs" data-group="tecnis">
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="basico" title="Básico">Básico</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="efeitos" title="Efeitos Mágicos">Efeitos Mágicos</a></label>
                    </nav>
                </div>  
            </div>
        </div>
    </header>
    <section class="sheet-primary form_tagmar">
        <div class="container">
            <div class="row container_dados">
                <div class="tab basico container dentro" data-group="tecnis" data-tab="basico">
                    <div class="container">
                        <div class="row dados">
                            <div class="col-md-2">
                                <label><h4 class="mediaeval">Custo:</h4></label>
                            </div>
                            <div class="col-md-2">
                                <input name="system.custo" type="number" value="{{data.system.custo}}" height="30" class="custoInput"/>
                            </div>
                            <div class="col-md-2">
                                <label><h4 class="mediaeval">Nível:</h4></label>
                            </div>
                            <div class="col-md-2">
                                <input name="system.nivel" type="number" value="{{data.system.nivel}}" height="30" class="nivelInput"/>
                            </div>
                            <div class="col-md-2">
                                <label><h4 class="mediaeval">FA:</h4></label>
                            </div>
                            <div class="col-md-2">
                                <input name="system.fa" type="number" value="{{data.system.fa}}" height="30" class="totalInput" readonly/>
                            </div>
                        </div>

                        <div class="row dados">
                            <div class="col-md-2">
                                <label><h4 class="mediaeval">Mecânica:</h4></label>
                            </div>
                            <div class="col-md-4">
                                <select class="mediaeval" style="font-size: 90%;" name="system.mecanica" type="text" value="{{data.system.mecanica}}" height="30" data-dtype="String"/>
                                    {{#selectOptions item.tec_mecanicas selected=data.system.mecanica valueAttr="value" labelAttr="label"}}
                                    {{/selectOptions}}
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label><h4 class="mediaeval">Atributo:</h4></label>
                            </div>
                            <div class="col-md-2">
                                <select class="mediaeval" style="font-size: 90%;" name="system.ajuste.atributo" type="text" value="{{data.system.ajuste.atributo}}" data-dtype="String" height="30">
                                    {{#selectOptions item.prof_atribM selected=data.system.ajuste.atributo valueAttr="key"}}
                                    {{/selectOptions}}
                                </select>         
                            </div>
                        </div>

                        <div class="row dados">
                            <div class="col-md-3"><label><h4 class="mediaeval">Teste Res.:</h4></label></div>
                            <div class="col-md-2">
                                <select class="mediaeval" style="font-size: 90%;" name="system.teste" type="text" value="{{data.system.teste}}" height="30" data-dtype="String"/>
                                    {{#selectOptions item.tec_perg selected=data.system.teste valueAttr="key"}}
                                    {{/selectOptions}}
                                </select>
                            </div>
                            <div class="col-md-2"><label><h4 class="mediaeval">Restrição:</h4></label></div>
                            <div class="col-md-5">
                                <input class="mediaeval" name="system.restricao" type="text" value="{{data.system.restricao}}" height="30"/>
                            </div>
                        </div>

                        <div class="row dados">
                            <div class="col-md-3"><label><h4 class="mediaeval">Pré-requisito:</h4></label></div>
                            <div class="col-md-2">
                                <select class="mediaeval" style="font-size: 90%;" name="system.pre_requisito.valor" type="text" value="{{data.system.pre_requisito.valor}}" height="30" data-dtype="String"/>
                                    {{#selectOptions item.tec_perg selected=data.system.pre_requisito.valor valueAttr="key"}}
                                    {{/selectOptions}}
                                </select>
                            </div>
                            <div class="col-md-7">
                                <select class="mediaeval" style="font-size: 90%;" name="system.pre_requisito.tecnica" type="text" value="{{data.system.pre_requisito.tecnica}}" data-dtype="String" height="30">
                                    {{#selectOptions item.tecnicas selected=data.system.pre_requisito.tecnica valueAttr="name" labelAttr="name"}}
                                    {{/selectOptions}}
                                </select>
                            </div>
                        </div>

                        <div class="row dados">
                            <div class="col-md-3"><label><h4 class="mediaeval">Complemento:</h4></label></div>
                            <div class="col-md-2">
                                <select class="mediaeval" style="font-size: 90%;" name="system.complemento" type="text" value="{{data.system.complemento}}" height="30" data-dtype="String"/>
                                    {{#selectOptions item.tec_perg selected=data.system.complemento valueAttr="key"}}
                                    {{/selectOptions}}
                                </select>
                            </div>
                            <div class="col-md-1"><label><h4 class="mediaeval">Bônus:</h4></label></div>
                            <div class="col-md-2">
                                <input name="system.bonus" type="number" value="{{data.system.bonus}}" height="30"/>
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <div class="row dados">
                            <div class="col-md-2"><label><h4 class="mediaeval">Duração:</h4></label></div>
                            <div class="col-md-2">
                                <input class="mediaeval" name="system.duracao.valor" type="number" value="{{data.system.duracao.valor}}" height="30"/>
                            </div>
                            <div class="col-md-2">
                                <select class="mediaeval" style="font-size: 90%;" name="system.duracao.tipo" type="text" value="{{data.system.duracao.tipo}}" height="30" data-dtype="String"/>
                                    {{#selectOptions item.tec_durac selected=data.system.duracao.tipo valueAttr="key"}}
                                    {{/selectOptions}}
                                </select>
                            </div>
                            <div class="col-md-2"></div>
                            <div class="col-md-2"><h4 class="mediaeval">Favorito:</h4></div>
                            <div class="col-md-2">
                                {{#if data.system.favorito}}
                                    <input type="checkbox" checked name="system.favorito" data-dtype="Boolean" value="{{data.system.favorito}}"/>
                                {{else}}
                                    <input type="checkbox" name="system.favorito" data-dtype="Boolean" value="{{data.system.favorito}}"/>
                                {{/if}}
                            </div>
                        </div>

                        <div class="row dados">
                            <div class="col-md-12" style="height: 320px;">
                                {{editor data.system.descricao target="system.descricao" button=true owner=options.owner editable=options.editable}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>   
    </section>
</form>
